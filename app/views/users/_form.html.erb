<% if @user.errors.any? %>
  <div id="error_explamation">
    <h2>Infelizmente nao foi possivel completar
    a acao pois o formulario possui os seguintes erros:</h2>  
    <ul>
     <% @user.errors.full_messages.each do |massege| %>
        <li><%= massege %></li>
       <% end %>
    </ul>
    </div>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :bio %><br/>
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>